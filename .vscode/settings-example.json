{
  "eslint.format.enable": true,
  "eslint.probe": ["javascript", "typescript", "html", "glimmer-js", "glimmer-ts", "json"],
  "eslint.validate": ["javascript", "typescript", "html", "glimmer-js", "glimmer-ts", "json"],
  "eslint.options": { "reportUnusedDisableDirectives": "error" },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.associations": {
    "turbo.json": "jsonc"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[handlebars]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[glimmer-js]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[glimmer-ts]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },

  // Adds Turbo and AB files to search exclude
  "files.exclude": {
    "**/coverage": true,
    "**/.turbo": true,
    "**/tmp": true
  },

  // Inherits all values from 'files.exclude'
  // These are files we want to show in sidebar but not slow search or quick files
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },

  // This does not inherit from 'files.exclude'
  // This impacts extensions which can use file watcher API and use a lot of RAM
  "files.watcherExclude": {
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/node_modules/**": true,
    "**/node_modules/*/**": false,
    "**/tmp": true
  }
}
